generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Game {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String   @unique
  name       String
  provider   String
  image      String
  categories String[]
}

model Category {
  id   String  @id @default(uuid()) @map("_id")
  name String?
  icon String
}

model Collection {
  id   String  @id @default(uuid()) @map("_id")
  name String?
  icon String
}

model Provider {
  id   String @id @default(uuid()) @map("_id")
  name String
}
